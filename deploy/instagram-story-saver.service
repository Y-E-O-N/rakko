[Unit]
Description=Instagram Story Saver
After=network.target

[Service]
Type=simple
User=opc
Group=opc
WorkingDirectory=/home/opc/rakko/instagram-story-saver
Environment="PATH=/home/opc/rakko/insta_env/bin:/usr/local/bin:/usr/bin:/bin"
EnvironmentFile=/home/opc/rakko/.env
ExecStart=/home/opc/rakko/insta_env/bin/python main.py
Restart=always
RestartSec=10

# 로그 설정
StandardOutput=journal
StandardError=journal

# 리소스 제한
MemoryMax=256M
CPUQuota=30%

[Install]
WantedBy=multi-user.target
